  <div>
    <a class="btn btn-ghost text-xl">NHEA</a>
  </div>
  <div class="hidden lg:flex ml-0 lg:ml-auto">
    <ul class="menu menu-horizontal px-1">
      <li><a>Item 1</a></li>
      <li>
        <details>
          <summary>Parent</summary>
          <ul class="p-2">
            <li><a>Submenu 1</a></li>
            <li><a>Submenu 2</a></li>
