---
import { Menu } from "lucide-astro";
import ThemeController from "./ThemeController.astro";
---

<div data-theme="dim" class="navbar bg-base-100 border-b-[primary]">
  <div class="navbar-start">
    <details
      onmouseover="this.setAttribute('open', true)"
      onmouseout="this.removeAttribute('open')"
      class="dropdown lg:hidden"
    >
      <summary class="btn btn-ghost m-1">
        <Menu />
      </summary>
      <ul
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] pt-3 w-52 p-2 shadow"
      >
        <li><a href="#">annual convention</a></li>
        <li><a href="#">register</a></li>
        <li><a href="#">about us</a></li>
      </ul>
    </details>
    <a class="btn btn-ghost text-xl">daisyUI</a>
  </div>
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1 gap-2">
      <li><a>annual convention</a></li>
      <li><a>register</a></li>
      <li><a>about us</a></li>
    </ul>
  </div>
  <div class="navbar-end">
    <ThemeController />
  </div>
</div>
